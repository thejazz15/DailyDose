<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context="com.thejazz.dailydose.fragments.PopularFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="POPULAR"
        android:background="@drawable/background_heading"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        android:gravity="center"/>

    <ProgressBar
        android:layout_margin="8dp"
        android:id="@+id/popular_progress"
        android:layout_width="match_parent"
        style="@style/GenericProgressIndicator"
        android:foregroundGravity="center"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/no_internet_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No Internet Connectivity."
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginBottom="4dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/pop_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>